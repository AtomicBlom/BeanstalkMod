// This file keeps IDEs happy, it is not used for compilation
{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ES6",
        "noImplicitAny": true,
        "types": [
            "mcscripting"
        ],
        "rootDir": "./src"
    },
    "include": [
        "src/scripts/*/*",
    ],
    "exclude": [
        "../node_modules"
    ]
}
